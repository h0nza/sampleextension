# Makefile.in --
#
# A minimalist makefile to invoke functions in make.tcl

SHELL		= @SHELL@
TCLSH   = @TCLSH@
srcdir		= @srcdir@

#========================================================================
# Start of user-definable TARGETS section
#========================================================================

all:
	$(TCLSH) ${srcdir}/make.tcl all

binaries:
	$(TCLSH) ${srcdir}/make.tcl binaries

libraries:
	$(TCLSH) ${srcdir}/make.tcl all

doc:
	$(TCLSH) ${srcdir}/make.tcl doc

test:
	$(TCLSH) ${srcdir}/make.tcl doc

dist:
	$(TCLSH) ${srcdir}/make.tcl clean

distclean:
	$(TCLSH) ${srcdir}/make.tcl clean

clean:
	$(TCLSH) ${srcdir}/make.tcl clean

install:
	$(TCLSH) ${srcdir}/make.tcl install $(DESTDIR)

install-modules:
	$(TCLSH_PROG) $(srcdir)/scripts/install.tcl $(srcdir)/modules $(DESTDIR)$(pkglibdir)

.PHONY: all binaries libraries doc test dist distclean install install-modules clean

# Tell versions [3.59,3.63) of GNU make to not export all variables.
# Otherwise a system limit (for SysV at least) may be exceeded.
.NOEXPORT:
